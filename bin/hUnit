namespace hUnit;

require_once "/usr/local/hUnit/src/hUnit.hh";

$paths = (new Vector($argv))->removeKey(0);
$scanner = new SourceScanner();

foreach($scanner->scanPaths($paths)->sourceFiles as $file) {
    require_once $file;
}

exit((new hUnit())->run()); 
